<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Profile Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="6dp"
            android:backgroundTint="@android:color/white">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Profile Image"/>
        </androidx.cardview.widget.CardView>

        <!-- Upload Profile Button -->
        <Button
            android:id="@+id/btn_upload_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Profile"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"/>

        <!-- Title -->

        <!-- Personal Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <EditText
            android:id="@+id/et_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth"
            android:inputType="date"
            android:minHeight="48dp" />

        <RadioGroup
            android:id="@+id/rg_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"/>
            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"/>
            <RadioButton
                android:id="@+id/rb_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"/>
        </RadioGroup>

        <EditText
            android:id="@+id/et_contact_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:inputType="phone"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_blood_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Blood Group"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_organ_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Organ(s) Available for Donation"
            android:inputType="text"
            android:minHeight="48dp" />

        <!-- Medical and Health Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical and Health Information"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <EditText
            android:id="@+id/et_medical_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Recent Medical History"
            android:inputType="textMultiLine"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_surgeries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Previous Surgeries or Transplants"
            android:inputType="textMultiLine"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btn_upload_previous_surgeries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Previous Surgery Reports"
            android:layout_marginTop="8dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"/>

        <EditText
            android:id="@+id/et_medications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Current Medications"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_allergies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Allergies"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_lifestyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lifestyle Factors"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_genetic_disorders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Genetic Disorder Information"
            android:inputType="text"
            android:minHeight="48dp" />

        <!-- Upload Medical Reports Button -->
        <Button
            android:id="@+id/btn_upload_medical_reports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Medical Reports"
            android:layout_marginTop="8dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"/>

        <!-- Emergency Contact -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Contact"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <EditText
            android:id="@+id/et_emergency_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Emergency Contact Person"
            android:inputType="text"
            android:minHeight="48dp" />

        <!-- Location Details -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <EditText
            android:id="@+id/et_current_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Current Location"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_preferred_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Preferred Donation Locations"
            android:inputType="text"
            android:minHeight="48dp" />

        <!-- Submit and Edit Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_green_dark" />

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
